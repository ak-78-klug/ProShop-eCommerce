{
  "version": 2,
  "builds": [
    { "src": "/api/(.*)", "use": "@vercel/node" },
    { "src": "/uploads/(.*)", "use": "@vercel/static" },
    {
      "src": "/frontend/build/(.*)",
      "use": "@vercel/static",
      "config": { "basePath": "/frontend/build" }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "/frontend/build/$1" }]
}
